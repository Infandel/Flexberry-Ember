<div class="col mb-4">
  <div class="card">
  <img src="images/speaker.jpg" width="250" height="250" class="rounded mx-auto d-block" alt="Фото спикера">
  <div class="card-body">
      <h5 class="card-title text-center">
         {{model.surname}} {{model.name}} {{model.patronymic}}
      </h5>
  </div>
  <div class="card-footer">
    {{!-- <div class="row"> --}}
      <div class="text-left">
        {{#link-to "speaker.index" class="btn btn-outline-primary"}}
          Вернуться
        {{/link-to}}
      </div>
      <div class="text-right">
        {{#link-to "speaker.edit" model.id class="btn btn-outline-primary"}}
          Редактировать
        {{/link-to}}
        <button type="button" onclick={{ action "deleteSpeaker" model }} class="btn btn-outline-danger" >
          Удалить 
        </button>
      </div>
    {{!-- </div> --}}
  </div>
  </div>
</div>
{{outlet}}