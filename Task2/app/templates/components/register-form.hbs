<form onsubmit={{action "saveUser"}} class="edit-form">

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Электронная почта:</label>
    <div class="col-sm-10">
      {{input type="text" value=email class="form-control form-control-lg" placeholder="Электронная почта"}}
    </div>
    <div class="col-sm-10">
      {{#each errors.email as |error|}}
        <span class="alert alert-danger">{{error.message}}</span>
      {{/each}}
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Имя пользователя:</label>
    <div class="col-sm-10">
      {{input type="text" value=username class="form-control form-control-lg" placeholder="Имя пользователя"}}
      
      {{#each errors.username as |error|}}
        <span class="alert alert-danger">{{error.message}}</span>
      {{/each}}
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Пароль:</label>
    <div class="col-sm-10">
      {{input type="password" value=password class="form-control form-control-lg" placeholder="Пароль"}}
      
      {{#each errors.password as |error|}}
        <span class="alert alert-danger">{{error.message}}</span>
      {{/each}}
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Подтверждение пароля:</label>
    <div class="col-sm-10">
      {{input type="password" value=passwordConfirmation class="form-control form-control-lg" placeholder="Подтвердите Пароль"}}
      
      {{#each errors.passwordConfirmation as |error|}}
        <span class="alert alert-danger">{{error.message}}</span>
      {{/each}}
    </div>
  </div>

  

  <div class="form-group row">
    <div class="col-6">
      <button type="submit" class="btn btn-outline-primary btn-lg">Сохранить</button>
    </div>
    <div class="col-6 text-right">
      {{#link-to "index" class="btn btn-outline-secondary btn-lg" }}Отмена{{/link-to}}
    </div>
	</div>
  
</form>