<form onsubmit={{action "submitForm"}} class="edit-form">

  <div class="form-group">
    <label class="col-sm-2 col-form-label">{{t "speakers.name"}}:</label>
    <div class="col-sm-10">
      {{input type="text" value=name class="form-control form-control-lg" placeholder=(t 'speakers.placeholder.name')}}
    </div>
    <div class="col-sm-10">
      {{#if showError}}
        {{#if (v-get this 'name' 'isInvalid')}}
          <span class="text-danger">
            {{v-get this 'name' 'message'}}
          </span>
        {{/if}}
      {{/if}}
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 col-form-label">{{t "speakers.surname"}}:</label>
    <div class="col-sm-10">
      {{input type="text" value=surname class="form-control form-control-lg" placeholder=(t 'speakers.placeholder.surname')}}
    </div>
    <div class="col-sm-10">
      {{#if showError}}
        {{#if (v-get this 'surname' 'isInvalid')}}
          <span class="text-danger">
            {{v-get this 'surname' 'message'}}
          </span>
        {{/if}}
      {{/if}}
    </div>
  </div>
  
  <div class="form-group">
    <label class="col-sm-2 col-form-label big">{{t "speakers.patronymic"}}:</label>
    <div class="col-sm-10">
      {{input type="text" value=patronymic class="form-control form-control-lg" id="inputPatronymic" placeholder=(t 'speakers.placeholder.patronymic')}}
    </div>
    <div class="col-sm-10">
      {{#if showError}}
        {{#if (v-get this 'patronymic' 'isInvalid')}}
          <span class="text-danger">
            {{v-get this 'patronymic' 'message'}}
          </span>
        {{/if}}
      {{/if}}
    </div>
  </div>

  <div class="form-group row">
    <div class="col-6">
      <button type="submit" class="btn btn-outline-primary btn-lg">{{t "buttons.save"}}</button>
    </div>
    <div class="col-6 text-right">
      {{#link-to "speaker" class="btn btn-outline-secondary btn-lg" }}{{t "buttons.cancel"}}{{/link-to}}
    </div>
	</div>
  
</form>
