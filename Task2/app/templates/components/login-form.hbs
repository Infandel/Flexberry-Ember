<form onsubmit={{action "login"}} class="edit-form">

  {{#each errors as |error|}}
    <div class="alert alert-danger">{{error.detail}}</div>
  {{/each}}

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Электронная почта:</label>
    <div class="col-sm-10">
      {{input type="text" value=email class="form-control form-control-lg" placeholder="Введите электронную почту"}}
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Пароль:</label>
    <div class="col-sm-10">
      {{input type="password" value=password class="form-control form-control-lg" placeholder="Введите пароль"}}
    </div>
  </div>

  <div class="form-group row">
    <div class="col-6">
      <button type="submit" class="btn btn-outline-primary btn-lg">Войти</button>
    </div>
    <div class="col-6 text-right">
      {{#link-to "index" class="btn btn-outline-secondary btn-lg" }}Отмена{{/link-to}}
    </div>
	</div>
  
</form>