<form onsubmit={{action "login"}} class="edit-form">

  {{#each errors as |error|}}
    <div class="alert alert-danger">{{error.detail}}</div>
  {{/each}}

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">{{t "register.email"}}:</label>
    <div class="col-sm-10">
      {{input type="text" value=email class="form-control form-control-lg" placeholder=(t "register.email")}}
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">{{t "register.password"}}:</label>
    <div class="col-sm-10">
      {{input type="password" value=password class="form-control form-control-lg" placeholder=(t "register.password")}}
    </div>
  </div>

  <div class="form-group row">
    <div class="col-6">
      <button type="submit" class="btn btn-outline-primary btn-lg">{{t "menu.login"}}</button>
    </div>
    <div class="col-6 text-right">
      {{#link-to "index" class="btn btn-outline-secondary btn-lg" }}{{t "buttons.cancel"}}{{/link-to}}
    </div>
	</div>
  
</form>