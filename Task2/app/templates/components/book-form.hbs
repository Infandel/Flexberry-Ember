<form onsubmit={{action "submitForm"}} class="edit-form">

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Название:</label>
    <div class="col-sm-10">
      {{input type="text" value=title class="form-control form-control-lg" placeholder="Полное название книги"}}
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Автор:</label>
    <div class="col-sm-10">
      {{input type="text" value=author class="form-control form-control-lg" placeholder="Фамилия И.О. автора"}}
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Объем:</label>
    <div class="col-sm-10">
      {{input type="number" value=pagesCount class="form-control form-control-lg" placeholder="Количество страниц книги"}}
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Ссылка на обложку:</label>
    <div class="col-sm-10">
      {{input type="url" value=coverURL class="form-control form-control-lg" placeholder="Н-р: http://www.example.jpg"}}
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Ссылка на описание:</label>
    <div class="col-sm-10">
      {{input type="url" value=descriURL class="form-control form-control-lg" placeholder="Н-р: http://www.example.com"}}
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Теги:</label>
    <div class="col-sm-10">
      {{input type="text" value=tags class="form-control form-control-lg" placeholder="#Теги через запятую"}}
    </div>
  </div>

  <div class="form-group row">
    <div class="col-6">
      <button type="submit" class="btn btn-outline-primary btn-lg">Сохранить</button>
    </div>
    <div class="col-6 text-right">
      {{#link-to "book" class="btn btn-outline-secondary btn-lg" }}Отмена{{/link-to}}
    </div>
	</div>

</form>
