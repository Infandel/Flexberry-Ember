<form onsubmit={{action "saveClubMeeting"}} class="edit-form">

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Имя:</label>
    <div class="col-sm-10">
      {{input type="date" value=meetingDate class="form-control form-control-lg" placeholder="Выберите дату"}}
    </div>
  </div>

  <div class="form-group row">
    <div class="col-6">
      <button type="submit" class="btn btn-outline-primary btn-lg">Сохранить</button>
    </div>
    <div class="col-6 text-right">
      {{#link-to "club-meeting.index" class="btn btn-outline-secondary btn-lg" }}Отмена{{/link-to}}
    </div>
	</div>
  
</form>