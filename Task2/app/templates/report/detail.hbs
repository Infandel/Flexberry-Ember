<div class="col mb-4">
  <div class="card">
  <div class="card-body">
    <h3 class="card-title text-center">
      Доклад за: {{model.reportDate}}       
    </h3>
    <h6 class="card-subtitle mb-2 text-left">
      <p>Оценка книги: {{model.bookScore}}</p>
      <label>Ссылка на презентацию:</label> 
        <p>{{model.presentationURL}}</p>
      <label>Ссылка на видео:</label>
        <p>{{model.videoURL}}</p>
      <label>Отзыв: </label>
        <p>{{model.review}}</p>
      <label>Докладчик: </label>
        <p>{{model.speaker.surname}} {{model.speaker.name}}</p>
      <label>По книге: </label>
        <p>{{model.book.title}}</p>
    </h6>
  </div>
  <div class="card-footer">
    {{!-- <div class="row"> --}}
      <div class="text-left">
        {{#link-to "report.index" class="btn btn-outline-primary"}}
          Вернуться
        {{/link-to}}
      </div>
      <div class="text-right">
        {{#link-to "report-edit" model.id class="btn btn-outline-primary"}}
          Редактировать
        {{/link-to}}
        <button type="button" onclick={{ action "deleteReport" model }} class="btn btn-outline-danger" >
          Удалить 
        </button>
      </div>
    {{!-- </div> --}}
  </div>
  </div>
</div>
{{outlet}}