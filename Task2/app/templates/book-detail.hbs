<div class="col mb-4">
  <div class="card">
    {{#if model.coverURL}}
      <img src={{model.coverURL}} width="250" height="250" class="rounded mx-auto d-block" alt="Фото обложки">
    {{else}}
      <img src="/images/book-cover.jpg" width="250" height="250" class="rounded mx-auto d-block" alt="Фото обложки">
    {{/if}}
    <div class="card-body">
      <h3 class="card-title text-center">
        {{t "books.title"}}: {{model.title}}       
      </h3>
      <h6 class="card-subtitle mb-2 text-left">
        <p>{{t "books.author"}}: {{model.author}}</p>
        <p>{{t "books.pagesCount"}}: {{model.pagesCount}}</p>
        <p>{{t "books.coverURL"}}: <a href={{model.coverURL}} class="link-warning">{{model.coverURL}}</a></p>
        <p>{{t "books.descriURL"}}: <a href={{model.descriURL}} class="link-warning">{{model.descriURL}}</a></p>
        <p>{{t "books.avgBookScore"}}: {{model.averageBookScore}}</p>
        <p>{{t "books.tags"}}: 
        {{#each model.tags as |tag|}}
          #{{tag}}
        {{/each}}
        </p>
      </h6>
    </div>
    <div class="card-footer">
      <h4 class="text-center">{{t "reports.reportsList"}}:</h4>
      <ul class="list-group">
        {{#each model.reports as |report|}}
          <il class="list-group-item">
            {{report.reportDate}}: <a href={{report.videoURL}}>{{t "reports.reportURL"}}</a>
          </il>
        {{/each}}
      </ul>
    </div>
    <div class="card-footer">
      {{!-- <div class="row"> --}}
        <div class="text-left">
          {{#link-to "book" class="btn btn-outline-primary"}}
            {{t "buttons.back"}}
          {{/link-to}}
        </div>
        {{#if (can "edit book" model)}}
          <div class="text-right">
            {{#link-to "book-edit" model.id class="btn btn-outline-primary"}}
              {{t "buttons.edit"}}
            {{/link-to}}
            <button type="button" onclick={{ action "deleteBook" model }} class="btn btn-outline-danger" >
              {{t "buttons.delete"}} 
            </button>
          </div>
        {{/if}}
      {{!-- </div> --}}
    </div>
  </div>
</div>
{{outlet}}
